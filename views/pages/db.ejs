<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
</head>

<body>
<% include ../partials/nav.ejs %>

<div class="jumbotron text-center" id="main_landing">
    <h1 id="comp_name">Recommendations for You</h1>
    <div class="card-deck">
        <% results.forEach(function(r) { %>

        <div class="card" style="width: 200px;">
            <img class="card-img-top" src="https://pbs.twimg.com/profile_images/432540905396895744/UU6Qw2Qx.png" alt="Card image cap">
            <ul>
                <div class="card-block">
                    <li><h4 class="card-title"><%=r.company%></h4></li>
                    <li><p class="card-text">Location: <%=r.location%><%=r.description%></p></li>
                    <li><a href="#" class="btn btn-primary">Apply</a></li>
                </div>
            </ul>
        </div>

        <% }); %>
    </div>
</div>

<a type="button" type="submit" class="btn btn-default" href="/recommendations">See More</a>
</body>
</html>
